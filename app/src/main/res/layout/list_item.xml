<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="60dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BusinessName"
            />

        <TextView
            android:id="@+id/addressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddressLine1"
            />

        <TextView
            android:id="@+id/addressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddressLine2"
            />

        <TextView
            android:id="@+id/addressLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddressLine3"
            />

        <TextView
            android:id="@+id/postCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PostCode"
            />

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/hygieneRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/distanceKmLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Distance KM:"
            />
        <TextView
            android:id="@+id/distanceKm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Unavailable"
            />

    </LinearLayout>

</LinearLayout>